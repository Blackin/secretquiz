<resources>

    <!-- Application -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBarSecretQuiz</item>
        <item name="android:actionBarStyle">@style/ActionBarSecretQuiz</item>

    </style>

    <!-- ActionBar -->
    <style name="ActionBarSecretQuiz" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/sq_pink</item>
        <item name="android:background">@color/sq_pink</item>

        <item name="logo">@drawable/logo_512</item>
        <item name="android:logo">@drawable/logo_512</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/ActionBarTitleTextSecretQuiz</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextSecretQuiz</item>
    </style>

    <!-- ActionBar Text -->
    <style name="ActionBarTitleTextSecretQuiz" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Activity -->
    <style name="BlackImageBackground" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/original_bk_activities</item>
    </style>

    <!-- Buttons -->
    <style name="RedButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CorrectNextButton" parent="RedButton">
        <item name="android:background">@drawable/correct_button_background</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WrongNextButton" parent="RedButton">
        <item name="android:background">@drawable/wrong_button_background</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Question -->
    <style name="QuestionTextView">
        <item name="android:textColor">@color/original_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">80dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <!-- Quit quiz Dialog -->
    <style name="QuitDialogTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>


</resources>
