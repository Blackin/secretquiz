<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BlackImageBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="1"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_transparent"
        />


    <ro.blackin.secretquiz.views.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="Are you ready ?"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <Button
        style="@style/RedButton"
        android:id="@+id/btnStartQuiz"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="@string/btn_start_quiz"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ro.blackin.secretquiz.views.SAutoBgButton
            android:id="@+id/btnSoundOnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_sound"
            />

    </LinearLayout>

</LinearLayout>