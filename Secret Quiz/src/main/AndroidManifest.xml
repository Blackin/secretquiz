<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ro.blackin.secretquiz" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:logo="@drawable/logo_512"
        >
        <activity
            android:name="ro.blackin.secretquiz.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light"
            android:logo="@drawable/logo_512"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ro.blackin.secretquiz.TakeQuizActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light"
            android:logo="@drawable/logo_512"
            >
        </activity>
        <activity
            android:name="ro.blackin.secretquiz.YesActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_yes"
            android:theme="@style/Theme.AppCompat.Light"
            android:logo="@drawable/logo_512"
            >
        </activity>
    </application>

</manifest>
